{
  "name": "shadowcheck",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "tsx watch server/index.ts",
    "dev:client": "cd client && vite",
    "build": "cd client && vite build",
    "preview": "cd client && vite preview"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "drizzle-orm": "^0.44.6",
    "express": "^4.18.2",
    "nanoid": "^5.1.6",
    "pg": "^8.11.3",
    "postgres": "^3.4.7",
    "postgres-js": "^0.1.0",
    "vite": "^7.1.10"
  },
  "workspaces": [
    "client",
    "server"
  ],
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/helmet": "^0.0.48",
    "@types/nanoid": "^2.1.0",
    "@types/node": "^24.7.2",
    "@types/pg": "^8.15.5",
    "concurrently": "^8.2.2",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  }
}
